<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginHorizontal="10dip"
    android:layout_width="wrap_content"
    android:id="@+id/mainLayout"
    android:layout_height="135dip"
    tools:targetApi="o">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dip"
        android:layout_height="100dip"
        app:civ_border_color="@color/colorRed"
        app:civ_border_width="2dip"
        android:src="@color/colorRed"
        app:civ_border_overlay="true"
        android:id="@+id/menuImage" />

    <CheckBox
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_gravity="top|end"
        android:id="@+id/itemCheckBox"
        android:background="@drawable/change_checkbox_design"
        android:button="@null"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="10dip"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        android:id="@+id/txtName"/>

</FrameLayout>